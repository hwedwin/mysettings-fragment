<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        style="@style/title_tv_style"
        android:text="@string/advanced_clear_all"/>
    <RelativeLayout
        style="@style/unfocusable_ll_style"
        android:textAlignment="center"
        android:layout_marginTop="10dp">
        <TextView
            style="@style/tv_base_style"
            android:textColor="@color/lightGray"
            android:layout_alignParentStart="true"
            android:layout_marginStart="100dp"
            android:text="@string/advanced_cache_size"
            android:id="@+id/advanced_tv_cache_size"/>

        <Button
            style="@style/btn_base_style"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="100dp"
            android:text="@string/advanced_clear_all"
            android:id="@+id/advanced_btn_clear"/>
    </RelativeLayout>

</LinearLayout>