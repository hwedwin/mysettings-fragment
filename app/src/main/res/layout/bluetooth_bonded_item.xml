<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/focusable_ll_style"
    android:id="@+id/bluetooth_ll_item">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/chosen"
        android:focusable="false"
        android:gravity="bottom"
        />

    <TextView
        style="@style/tv_base_style"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="100dp"
        android:id="@+id/bluetooth_tv_item_info"/>

    <TextView
        android:id="@+id/tv_connected"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        style="@style/tv_base_style"
        android:gravity="start|bottom"
        android:text="@string/eth_bluetooth_paired" />

</LinearLayout>